{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "types": [
      "vite/client",
      "react",
      "react-dom"
    ],
    "paths": {
      "@/*": ["./client/src/*"]
    }
  },
  "include": [
    "client/src/**/*.ts",
    "client/src/**/*.tsx",
    "client/vite-env.d.ts"
  ],
  "references": [
    {
      "path": "./client"
    }
  ]
}
